<section id="waitlist" class="wrap">
  <div class="card">
    <div class="copy">
      <h2>Join the waitlist</h2>
      <p>Be the first to try TrueSpec and get early access updates.</p>
    </div>

    <form class="form" data-waitlist-form action="/api/waitlist" method="post">
      <label class="sr-only" for="waitlist-email">Email address</label>
      <input
        id="waitlist-email"
        class="input"
        type="email"
        name="email"
        placeholder="you@company.com"
        autocomplete="email"
        required
      />
      <button class="btn primary" type="submit">Join waitlist</button>
    </form>

    <p class="status" data-waitlist-status role="status" aria-live="polite"></p>
    <p class="note">No spam. Only early access updates.</p>
  </div>
</section>

<script>
  const form = document.querySelector("[data-waitlist-form]");
  const status = document.querySelector("[data-waitlist-status]");

  if (form instanceof HTMLFormElement && status instanceof HTMLElement) {
    const button = form.querySelector('button[type="submit"]');

    form.addEventListener("submit", async (event) => {
      event.preventDefault();

      status.textContent = "Submitting...";
      status.dataset.state = "loading";
      if (button instanceof HTMLButtonElement) {
        button.disabled = true;
      }

      try {
        const response = await fetch(form.action, {
          method: "POST",
          body: new FormData(form),
        });

        if (!response.ok) {
          const message = await response.text();
          throw new Error(message || `Request failed (${response.status})`);
        }

        form.reset();
        status.textContent = "Thanks. You are on the list.";
        status.dataset.state = "success";
      } catch (error) {
        status.textContent = "Something went wrong. Please try again.";
        status.dataset.state = "error";
      } finally {
        if (button instanceof HTMLButtonElement) {
          button.disabled = false;
        }
      }
    });
  }
</script>

